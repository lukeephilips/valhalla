<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, placeholder: "EMAIL", class: "my-form" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, placeholder: "PASSWORD", class: "my-form"  %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "btn" %>
          <%= link_to "Register", new_user_registration_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
