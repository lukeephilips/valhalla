<div class="container">
  <div class="row back-row">
    <%= link_to 'Back', products_path %>
  </div>
  <div class="row product-det-row">
    <div class="col-sm-5 product-detail-img">
      <%= image_tag @product.image.url(:medium) %>
    </div>
    <div class="col-sm-7 product-detail-info">
      <div class="info-wrap">
        <h1>
          <%= @product.name %>
        </h1>



        <p class="brand">
          <%= @product.brand %>
        </p>

        <p class="price">$
          <%= @product.price %>
        </p>
        <%= link_to "Add to cart", product_carts_path(@product.id), method: 'post', class: 'btn purchase'%>
      </div>
    </div>
  </div>
</div>
